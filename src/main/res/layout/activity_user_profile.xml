<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UserProfile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="20dp"
        android:background="@color/yellow">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cook"
        android:layout_centerVertical="true"
        android:transitionName="imageTransition"/>

        <TextView
            android:id="@+id/userprofilefullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_picture"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:text="mahmouid gamea"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            android:transitionName="logoTransition" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="-88dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardElevation="13dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/payment_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_payment_24"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/payment_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325$"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/payment_image"
                    android:textSize="18dp"
                    android:letterSpacing="0.12"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bungee"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/payment_cost"
                    android:includeFontPadding="false"
                    android:textSize="23dp"
                    android:fontFamily="@font/antic"
                    android:textStyle="bold"
                    android:letterSpacing="0.1100"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardElevation="13dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/payment_image2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_loyalty_24"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/payment_cost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/payment_image2"
                    android:textSize="18dp"
                    android:letterSpacing="0.12"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bungee"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/payment_cost2"
                    android:includeFontPadding="false"
                    android:textSize="23dp"
                    android:fontFamily="@font/antic"
                    android:textStyle="bold"
                    android:letterSpacing="0.1100"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameuserprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Full Name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/antic" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailuserprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_outline_send_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/antic" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneuserprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Phone">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_outline_phone_in_talk_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/antic" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passworduserprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_outline_lock_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/antic" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/yellow"
        android:text="View menu"
        android:textColor="@color/black"
        android:textSize="17sp" />
</LinearLayout>